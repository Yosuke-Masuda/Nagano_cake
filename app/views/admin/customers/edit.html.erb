<div class="row">
  <div class="col-2"></div>
  <div class="edit-title">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>
</div>

<div class="row">
   <div class="col-2"></div>
   <div>
     <%= form_with( model: @customer, url: admin_customer_path, local: true) do |f| %>
       <div class="row">
         <table class="table table-bordered">
           <tbody>
             <tr>
               <th>会員ID</th>
               <td><%= @customer.id %></td>
             </tr>
             <tr>
               <th>氏名</th>
               <td><%= f.text_field :last_name, id: "adminCustomerLastName" %> <%= f.text_field :first_name, id: "adminCustomerFirstName" %></td>
             </tr>
             <tr>
               <th>フリガナ</th>
               <td><%= f.text_field :last_name_kana, id: "adminCustomerKanaLastName" %> <%= f.text_field :first_name_kana, id: "adminCustomerKanaFirstName" %></td>
             </tr>
             <tr>
               <th>住所</th>
               <td><%= f.text_field :address, id: "adminCustomerAddress" %></td>
             </tr>
             <tr>
               <th>電話番号</th>
               <td><%= f.text_field :phone_number, id: "adminCustomerPhoneNumber" %></td>
             </tr>
             <tr>
               <th>メールアドレス</th>
               <td><%= f.text_field :email, id: "adminCustomerEmail" %></td>
             </tr>
             <tr>
               <th>会員ステータス</th>
               <td>
                 <%= f.label :is_active, '有効', value: true %>
                 <%= f.radio_button :is_active, true %>
                 <%= f.label :is_active, '無効', value: false %>
                 <%= f.radio_button :is_active, false %>
               </td>
             </tr>
           </tbody>
         </table>
       </div>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-2"></div>
</div>